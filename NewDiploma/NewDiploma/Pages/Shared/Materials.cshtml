@{
    ViewData["Title"] = "Методички";
}

<div class="group">
    <h1>@ViewData["Title"]</h1>
</div>

<div class="groups">
    <div id="group-left">
        <input class="input-style fullw" placeholder="Введите название предмета">
        <div class="group-list">
            @foreach (var item in @Model)
            {
                <div class="group-item">
                    <a href="#">
                        <span>@item.CourseName</span>
                    </a>
                </div>
            }
        </div>
    </div>

    <div id="group-right">

    </div>
</div>